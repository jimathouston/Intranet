{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.csproj" ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/*.UnitTests*/*.csproj",
            "**/*.Test.Tools.csproj",
            "**/*.Tests.csproj",
            "docs.csproj"
          ],
          "src": "."
        }
      ],
      "dest": "src/docs/obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "src/docs/obj/api",
        "dest": "api"
      },
      {
        "files": [ "src/docs/**/*.md", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "src/docs/**/images/**"]
      }
    ],
    "overwrite": "src/docs/specs/*.md",
    "globalMetadata": {
      "_appTitle": "Certaincy Intranet – Documentation",
      "_enableSearch": true,
      "_appFooter": "Copyright © 2017 Certaincy<br>Generated by <strong>DocFX</strong>",
      "_enableNewTab": true,
      "_gitContribute": {
        "branch": "develop"
      }
    },
    "dest": "src/Intranet.Web/Documentation"
  }
}
