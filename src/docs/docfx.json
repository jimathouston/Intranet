{
  "build": {
    "content": [
      {
        "files": [ "**/*.md", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Certaincy Intranet – Documentation",
      "_enableSearch": true,
      "_appFooter": "Copyright © 2017 Certaincy<br>Generated by <strong>DocFX</strong>",
      "_enableNewTab": true,
      "_gitContribute": {
        "branch": "master"
      }
    },
    "dest": "../Intranet.Web/Documentation"
  }
}
